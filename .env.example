# Application Settings
APP_NAME=WhatsApp AI Agent
DEBUG=True
ENV=development
PORT=8001

# Security Settings
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=*
CORS_ORIGINS=http://localhost:3000

# WhatsApp API Settings
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id
WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token
DISABLE_WHATSAPP_SENDS=False

# Database Settings
MONGO_URL=mongodb://localhost:27017
MONGO_DB_NAME=whatsapp_agent
REDIS_URL=
DISABLE_DB=False

# AI Settings
GEMINI_API_KEY=your_gemini_api_key
# Or use multiple keys:
# GEMINI_API_KEYS=key1,key2,key3
AI_MODEL=gemini-pro

# OpenRouter Settings
OPENROUTER_API_KEY=your_openrouter_api_key
# For multiple keys:
# OPENROUTER_API_KEY_1=your_first_key
# OPENROUTER_API_KEY_2=your_second_key

# Feature Settings
PERSONAS_DIR=personas
LOG_LEVEL=INFO
RATE_LIMIT=100

# Gatekeeper Settings
NOTIFY_THRESHOLD=40
EMBED_SAVE_THRESHOLD=25
INACTIVITY_TIMEOUT_HOURS=4
FOLLOWUP_PROMPTS_ALLOWED=2
MEANINGFUL_CONVERSATION_THRESHOLD=0.5
MIN_CONVERSATION_LENGTH=2

# EOC (End of Conversation) Settings
EOC_CONFIDENCE_THRESHOLD=0.60
EOC_TRANSITION_THRESHOLD=0.70

# Owner Notification Thresholds
OWNER_NOTIFICATION_THRESHOLD=0.8
HIGH_PRIORITY_THRESHOLD=0.9
MEDIUM_PRIORITY_THRESHOLD=0.7
LOW_PRIORITY_THRESHOLD=0.5
VIP_NOTIFICATION_THRESHOLD=0.6
URGENT_NOTIFICATION_THRESHOLD=0.4

# Monitoring
ENABLE_METRICS=False
